{
    "compilerOptions": {
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "experimentalDecorators": true,
      "noEmitHelpers": false,
      "importHelpers": false,
      "moduleResolution": "node",
      "lib": [
        "dom",
        "dom.iterable",
        "es2015"
      ],
      "module": "es2015",
      "noImplicitAny": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "outDir": "dist/esm",
      "sourceMap": true,
      "target": "es2015"
    },
    "include": [
      "src/index.ts"
    ]
  }